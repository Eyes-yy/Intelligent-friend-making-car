}
.control {
   width: 100%;
   height: 760rpx; 
  justify-content: center;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.title{
  display: flex;
  justify-content: center;
  top:40rpx;
  font-size: 40rpx;
}
.video {
  display: block;
  width: 750rpx;
  height: 600rpx;
 }
.btn-wrap {
  position: fixed;
  left: 50%;
  bottom: 0px;
  transform: translateX(-50%);
  width: 360rpx;
  height: 360rpx;
}
.button {
  display: flex;
  position:absolute;

  height: 120rpx;
  width: 120rpx;
  /* opacity: 0.3; */
}
#forward {
  left: 120rpx;
  top: 0;
}
#left {
  left: 0;
  top: 120rpx;
}
#right {
  right: 0;
  top: 120rpx;
}
#back {
  bottom: 0;
  left: 120rpx;
}
#stop{
  left:120rpx;
  top:120rpx;
}